<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="contactUs"
            type="com.creative.share.apps.ebranch.models.ContactUsModel" />

        <variable
            name="contactListener"
            type="com.creative.share.apps.ebranch.interfaces.Listeners.ContactListener" />

        <variable
            name="lang"
            type="String" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fitsSystemWindows="true"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"

            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/linear_shape"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="5dp"

                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_user"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/colorPrimary"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:hint="@string/user_name"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray4"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="@={contactUs.name}"
                    error="@{contactUs.error_name}"
                    
                    />


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/linear_shape"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_email"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/colorPrimary"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:hint="@string/user_email"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray4"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="@={contactUs.email}"
                    error="@{contactUs.error_email}"
                    />


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/linear_shape"
                android:padding="5dp"
                android:layout_marginTop="15dp"


                >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@drawable/ic_phone"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />



                <EditText
                    android:layout_width="0dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:hint="@string/user_phone"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray4"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon"
                    android:text="@={contactUs.phone}"
                    error="@{contactUs.error_phone}"
                    app:layout_constraintTop_toTopOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:background="@drawable/linear_shape"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_chat"
                    android:layout_gravity="top"
                    android:tint="@color/colorPrimary"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                   android:padding="8dp"
                    android:background="@color/white"
                    android:hint="@string/user_email"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray4"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:gravity="top"

                    android:text="@={contactUs.message}"
                    error="@{contactUs.error_message}"
                    />


            </LinearLayout>



            <Button
                android:id="@+id/btnSend"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_login_bg"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="@string/send"
                android:onClick="@{()->contactListener.sendContact(contactUs)}"
                />
        </LinearLayout>
    </ScrollView>

</layout>